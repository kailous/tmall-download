{
    "manifest_version": 3,
    "name": "天猫图片下载器",
    "version": "1.0",
    "description": "为天猫商品详情页添加下载图片的功能",
    "background": {
      "service_worker": "js/background.js"
    },
    "permissions": [
      "downloads",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.tmall.com/*", "*://*.taobao.com/*"],
        "js": ["js/content.js"],
        "css": ["css/style.css"]
      }
    ],
    "action": {
      "default_icon": {
        "48": "img/app-icon-48.png",
        "128": "img/app-icon.png"
      }
    },
    "icons": {
      "48": "img/app-icon-48.png",
      "128": "img/app-icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["img/down.svg"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  